            <div class="card-body">
              <h5 class="card-title">Support Speaker!</h5>
              <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
              <a href="#" class="btn btn-primary">Vote</a>
            </div>
          </div>




        </div>
        <div class="col-12 col-md-8">

          <article>
           <!--end article title-->
            <div class="article__body">
              <%=raw @webinar.content %>
            </div>
          </article>
          <!--end item-->
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
  <section class="space--xxs">
    <div class="container space--xxs">
      <div class="row space--xxs">
        <div class="col-md-12 space--xxs">
          <hr>
        </div>
      </div>
      <!--end of row-->
    </div>
    <!--end of container-->
  </section>
