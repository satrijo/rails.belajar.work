<div class="main-container">
  <section class="cover unpad--bottom switchable text-center-xs bg--dark">
    <div class="container">
      <div class="row justify-content-between align-items-center">
        <div class="col-md-6 col-lg-5 ">
          <h1> <%= @webinar.title.titleize %></h1>
          <div class="lead"><%=raw @webinar.about %><br></div>
          <a class="btn btn--primary type--uppercase" href="#"> <span class="btn__text"><%= @webinar.speaker.titleize %> </span> </a>
          <span class="block type--fine-print">or <a href="index.html">view the screencast</a></span></div>
        <div class="col-md-6"><img alt="Image" src="https://cdn.belajar.work/img/landing-5.jpg"></div>
      </div>
    </div>
